<div id="comments">

  <table>
				<% book.book_comments.each do |comment| %>
				<tr>
				<td>
				<%= attachment_image_tag comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg" %><br>
				<%= comment.user.name %>
			    </td>

			    <td>
			    <%= comment.comment %>
			    </td>
			    <% if comment.user.id == current_user.id %>
			    <td><%= link_to "Destroy",book_book_comment_path(book_id: book, id: comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
			    </td>

			    <%end%>
			    </tr>
			    <%end%>

  </table>
	    	<%= form_with(model: [book, book_comment], remote: true ) do |f| %>
	    	<div class= "row">
	    		<div class="col-xs-9">
	    			<%= f.text_area :comment, rows:'5', class:"form-control",placeholder:"comments" %>
	    		</div>
	        </div>
	        <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
	        <%end%>
	    </div>